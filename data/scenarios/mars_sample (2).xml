<?xml version="1.0" encoding="UTF-8"?>
<scenario>
    <group name="debut de jeux">
        <!-- setup timer and events (fixed time) -->
        <event action="start_chrono" time="900" delay="10"/>
        <event action="goto_step" goto_id="end" delay="915"/>
        <event action="play_sound" name="voice_bio_15min" delay="9" volume="3.0" duration="0"/>
        <event action="play_sound" name="voice_bio_5min" delay="615" volume="3.0" duration="0"/>
        <event action="play_sound" name="voice_bio_1min" delay="855" volume="3.0" duration="0"/>
        <event action="play_sound" name="voice_bio_end" delay="900" volume="3.0" duration="0"/>

        <!-- set the screen "lost_astronaut" (never-mind the name) -->
        <step action="set_screen" name="lost_astronaut"/>
        <!-- starts the background music -->
        <step action="play_music" name="music_1" volume="0.2"/>
<!--        <step action="wait">-->
<!--            <condition key="keyboard" value="control-p"/>-->
<!--        </step>-->
        <step action="play_sound" name="ok" duration="0"/>

        <!-- lock password -->
        <step action="password" password="XXX" title="$la_lock_tile$" text="$la_lock_text$" icon="locked"/>
        <!-- <step action="play_sound" name="ok" duration="0"/> -->
        <step action="wait" duration="2"/>
        <step action="play_sound" name="voice_bio_intro" duration="0"/>
        <step action="info" title="$la_game_info_title$" text="$la_text$" duration="40" icon="compose" close_on_enter="False" text_size="0.035"/>

        <!-- game instructions -->
        <step action="info" title="$la_game_info_title$" text="$la_instructions$" duration="30" icon="compose" close_on_enter="True"/>

        <step action="enable_hardware"/>
<!--        &lt;!&ndash; game unlock condition &ndash;&gt;-->
        <step action="wait">
            <condition key="pilote_automatique1" value="False"/>
            <condition key="pilote_automatique2" value="False"/>
            <condition key="correction_roulis" value="False"/>
            <condition key="correction_stabilisation" value="False"/>
            <condition key="correction_direction" value="False"/>
        </step>
        <step action="disable_hardware"/>

        <step action="info" title="$la_game_info_title$" text="$la_game_info_text$" duration="15" icon="gamecontroller"/>
        <!-- start game -->
        <step action="2d_game_start" goal="30"/>
        <!-- display code -->
        <step action="info" title="$la_unlocked_title$" text="$la_unlocked_info$" duration="15"/>

        <!-- wait for end -->
        <step action="keyboard" key="control-enter"/>
        <step action="restart"/>
    </group>
    <group id="end">
        <step action="info" title="$la_chrono_end_title$" text="$la_chrono_end_text$" duration="10" icon="caution"/>
    </group>
</scenario>
