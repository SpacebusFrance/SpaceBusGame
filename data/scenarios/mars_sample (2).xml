<?xml version="1.0" encoding="UTF-8"?>
<scenario>
    <group name="debut de jeux">
        <!-- set the screen "lost_astronaut" (never-mind the name) -->
        <step action="set_screen" name="lost_astronaut"/>
        <step action="keyboard" key="control-enter"/>

        <step action="wait" duration="2"/>
        <!-- starts the background music -->
        <step action="play_music" name="music_1"/>

        <!-- lock password -->
        <step action="password" password="RTJ108" title="$la_lock_tile$" text="$la_lock_text$" icon="locked"/>

        <!-- <step action="play_sound" name="ok" duration="0"/> -->
        <step action="wait" duration="2"/>
        <step action="play_sound" name="voice_bio_intro" duration="0"/>
        <step action="info" title="$la_game_info_title$" text="$la_text$" duration="40" icon="compose" close_on_enter="False" text_size="0.042"/>

        <!-- setup timer and events (fixed time) -->
        <event action="start_chrono" time="900" delay="0"/>
        <event action="goto_step" goto_id="end" delay="900"/>
        <event action="play_sound" name="voice_bio_15min" delay="0" duration="0"/>
        <event action="play_sound" name="voice_bio_5min" delay="615" duration="0"/>
        <event action="play_sound" name="voice_bio_1min" delay="855" duration="0"/>

        <step action="wait" duration="2"/>

        <!-- game instructions -->
        <step action="info" title="$la_game_info_title$" text="$la_instructions$" duration="30" icon="compose" close_on_enter="True"/>

        <step action="enable_hardware"/>
<!--        &lt;!&ndash; game unlock condition &ndash;&gt;-->
        <step action="wait">
            <condition key="pilote_automatique1" value="True"/>
            <condition key="pilote_automatique2" value="True"/>
            <condition key="correction_roulis" value="True"/>
            <condition key="correction_stabilisation" value="True"/>
            <condition key="correction_direction" value="True"/>
        </step>
        <step action="disable_hardware"/>
        <step action="wait" duration="2"/>

        <step action="info" title="$la_game_info_title$" text="$la_game_info_text$" duration="30" icon="gamecontroller"/>
        <!-- start game -->
        <step action="2d_game_start" goal="30"/>

        <!-- display code -->
        <step action="info" title="$la_unlocked_title$" text="$la_unlocked_info$" close_on_enter="False"/>

<!--        <step action="keyboard" key="control-enter"/>-->
<!--        &lt;!&ndash; wait for end &ndash;&gt;-->
<!--        <step action="restart"/>-->
    </group>
    <group id="end">
        <step action="play_sound" name="voice_bio_end"/>
        <step action="play_sound" name="siren1" duration="0"/>
        <step action="led_on" led="alert0"/>
        <step action="led_on" led="alert1"/>
        <step action="info" title="$la_chrono_end_title$" text="$la_chrono_end_text$" duration="15" icon="caution"/>

        <!-- wait for end -->
        <step action="restart"/>
    </group>
</scenario>
