<?xml version="1.0" encoding="UTF-8"?>
<scenario>
    <group name="debut de jeux">
        <step action="set_screen" time_max="0.0" name="go_to_mars"/>

        <!-- set chronometer and time limit -->
        <event action="goto_step" goto_id="end" start_time="10"/>
        <step action="start-chrono" time="10" time_max="0"/>

        <!-- wait 5 seconds -->
        <step action="wait" time_max="5"/>

        <!-- info panel -->
        <step action="info" title="info" text="an information panel" time_max="20"/>

        <!-- infinite wait -->
        <step action="wait"/>
    </group>

    <group id="end">
        <step action="info" title="end of game !" text="this should be the end of game ..."
              time_max="5"/>

        <step action="end_game">
            <end_conditions>
                <condition key="b_admin" value="True"/>
            </end_conditions>
        </step>

        <step action="info" title="end" text="restarting game ..." time_max="5"/>

        <!-- RESTART GAME -->
        <step action="restart"/>
    </group>
</scenario>
